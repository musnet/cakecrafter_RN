{
  "name": "cakecrafter-react-native",
  "version": "1.0.0",
  "description": "CakeCrafter.AI React Native Mobile App - AI-Powered Cake Design for Qatar",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "eject": "expo eject",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "react-native",
    "expo",
    "cake-design",
    "ai",
    "qatar",
    "mobile-app",
    "cakecrafter"
  ],
  "author": {
    "name": "CakeCrafter.AI Team",
    "email": "team@cakecrafter.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cakecrafter-ai/react-native-app"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@reduxjs/toolkit": "^2.2.7",
    "axios": "^1.7.4",
    "expo": "~51.0.28",
    "expo-blur": "~13.0.3",
    "expo-linear-gradient": "~13.0.2",
    "expo-status-bar": "~1.12.1",
    "i18next": "^25.3.2",
    "i18next-react-native-language-detector": "^1.0.2",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.6.1",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-localize": "^3.5.1",
    "react-native-paper": "^5.12.3",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "^4.10.5",
    "react-native-screens": "^3.31.1",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.19.12",
    "react-redux": "^9.1.2",
    "expo-localization": "~15.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@eslint/js": "^9.9.0",
    "@types/react": "~18.2.45",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^9.9.0",
    "eslint-config-expo": "^7.1.2",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "typescript": "~5.3.3"
  },
  "expo": {
    "name": "CakeCrafter.AI",
    "slug": "cakecrafter-ai-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B0000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ai.cakecrafter.mobile",
      "buildNumber": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8B0000"
      },
      "package": "ai.cakecrafter.mobile",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "scheme": "cakecrafter"
  },
  "babel": {
    "presets": [
      "babel-preset-expo"
    ]
  },
  "eslintConfig": {
    "extends": [
      "expo",
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "react-native"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "react-native/no-unused-styles": "warn",
      "react-native/split-platform-components": "warn"
    },
    "env": {
      "react-native/react-native": true,
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|expo|@expo|react-native-paper)/)"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true
}
